swiper{
  width: 750rpx;
  height: 380rpx;
}

swiper navigator,
swiper image{
  width: 100%;
  height: 100%;
}

.container{
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  border-right: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
}

.item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.33333%;
  height: 250rpx;
  box-sizing: border-box;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.item image{
  width: 70rpx;
  height: 70rpx;
}
.item .text{
  margin-top: 10rpx;
  color: #888;
  font-size: 28rpx;
}

.link{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background: #fff;
}

.link image{
  width: 350rpx;
  height: 180rpx;
}