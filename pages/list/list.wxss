.search{
  padding: 10rpx 20rpx;
}
.search input{
  height: 60rpx;
  background-color: #fff;
  color: #888;
  padding-left: 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.item{
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #888;
}
.item .img{
  padding: 10rpx;
}
.item .img image{
  width: 150rpx;
  height: 150rpx;
}

.item .content{
  flex: 1;
  font-size: 28rpx;
  color: #888;
}
.item .content .title{
  color: #777;
  font-size: 30rpx;
}

.item .score{
  margin: 5rpx 0;
  padding: 5rpx 10rpx;
  height: 30rpx;
  background: red;
  color: #fff;
  font-size: 28rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 30rpx;
}

.load-more{
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #888;
}